extends ../includes/layout

block content
    div(class='container-fluid p-0')
        div(id='libraries' class='carousel slide' data-ride='carousel')
            ol(class='carousel-indicators')
                li(data-target='#libraries' data-slide-to='0' class='active')
                li(data-target='#libraries' data-slide-to='1')
                li(data-target='#libraries' data-slide-to='2')
            div(class='carousel-inner' style='width:100%; max-height: 49vh')
                div(class='carousel-item active')
                    img(src='/images/library-01.jpg' class='d-block w-100' alt='library')
                div(class='carousel-item')
                    img(src='/images/library-02.jpg' class='d-block w-100' alt='library')
                div(class='carousel-item')
                    img(src='/images/library-03.jpg' class='d-block w-100' alt='library')
            a(class='carousel-control-prev' href='#libraries' role='button' data-slide='prev')
                span(class='carousel-control-prev-icon' aria-hidden='true')
                span(class='sr-only') Previous
            a(class='carousel-control-next' href='#libraries' role='button' data-slide='next')
                span(class='carousel-control-next-icon' aria-hidden='true')
                span(class='sr-only') Next
        div(class='jumbotron jumbotron-fluid mb-0')
            div(class='container')
                h1(class='display-4') Booklyn Nine Nine
                p(class='lead') Welcome to New York's finest book store
                hr(class='my-4')
                p Hit a button to get started.
                p
                    a(class='btn btn-primary btn-lg' href='/books' role='button') Books
                    |  
                    a(class='btn btn-primary btn-lg' href='/search' role='button') Search
                    |  
                    button(type='button' class='btn btn-secondary btn-lg' data-toggle='modal' data-target='#login') Login
                    |  
                    a(class='btn btn-secondary btn-lg' href='/register' role='button') Register
