extends ../includes/layout

block content
    div(class='container-fluid')
        h1 Books
        each book in books
            div(class='card')
                div(class='card-body')
                    h5(class='card-title') #{book.title}
                    p(class='card-text')
                        | Author: #{book.author}
                        br
                        | Genre: #{book.genre}
                        br
                        | ISBN: #{book.isbn}
                    form(action='/book' method='delete')
                        a(href=`/book/${book.isbn}` class='btn btn-primary btn-md') Learn more
                        if session.loggedin
                            button(type='submit' class='btn btn-danger btn-md' name='isbn' value=`${book.isbn}`) Remove
