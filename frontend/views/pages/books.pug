extends ../includes/layout

block content
    div(class='container-fluid')
        h1 Books
        each book in data
            div(class='card')
                div(class='card-body')
                    h5(class='card-title') #{book.title}
                    p(class='card-text')
                        | Author: #{book.author}
                        br
                        | Genre: #{book.genre}
                        br
                        | ISBN: #{book.isbn}
                    a(href=`/book/${book.isbn}` class='btn btn-primary') Learn more
