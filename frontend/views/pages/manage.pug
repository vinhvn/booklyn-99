extends ../includes/layout

block content
    div(class='container-fluid')
        h1 Manage
        div(class='card')
            div(class='card-body')
                h3(class='card-title') Books
                p(class='card-text')
                    button(type='button' class='btn btn-primary btn-md' data-toggle='modal' data-target='#addBook') Add a Book
                    a(class='btn btn-danger btn-md' href='/books') Delete a Book
        div(class='card')
            div(class='card-body')
                h3(class='card-title') Publishers
                p(class='card-text')
                    button(type='button' class='btn btn-primary btn-md' data-toggle='modal' data-target='#addPublisher') Add a Publisher
    // Book form
    div(class='modal fade' id='addBook' tabindex='-1' role='dialog' aria-labelledby='addBookTitle' aria-hidden='true')
        div(class='modal-dialog modal-dialog-centered' role='document')
            div(class='modal-content')
                div(class='modal-header')
                    h5(class='modal-title' id='loginTitle') Add a Book
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                form(action='/book' method='post' class='needs-validation')
                    div(class='modal-body')
                        div(class='form-group')
                            label(for='isbn') ISBN
                            input(class='form-control' id='isbn' name='isbn' placeholder='1234567890123' required)
                            small(id="isbnHelp" class="form-text text-muted") Please enter all 13 digits.
                        div(class='form-group')
                            label(for='title') Title
                            input(class='form-control' id='title' name='title' placeholder='Title' required)
                        div(class='form-group')
                            label(for='author') Author
                            input(class='form-control' id='author' name='author' placeholder='Author' required)
                        div(class='form-group')
                            label(for='genre') Genre
                            input(class='form-control' id='genre' name='genre' placeholder='Genre' required)
                    div(class='modal-footer')
                        button(type='submit' class='btn btn-primary') Submit
    // Publisher form
    div(class='modal fade' id='addPublisher' tabindex='-1' role='dialog' aria-labelledby='addPublisherTitle' aria-hidden='true')
        div(class='modal-dialog modal-dialog-centered' role='document')
            div(class='modal-content')
                div(class='modal-header')
                    h5(class='modal-title' id='loginTitle') Add a Publisher
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                form(action='/publisher' method='post' class='needs-validation')
                    div(class='modal-body')
                        div(class='form-group')
                            label(for='publisher_name') Name
                            input(class='form-control' id='publisher_name' name='publisher_name' placeholder='Books R Us' required)
                        div(class='form-group')
                            label(for='banking_account') Bank Account
                            input(class='form-control' id='banking_account' name='banking_account' placeholder='037812200' required)
                        div(class='form-group')
                            label(for='email') Email
                            input(class='form-control' id='email' name='email' placeholder='publisher@gmail.com' required)
                        div(class='form-group')
                            label(for='phone_number') Phone Number
                            input(class='form-control' id='phone_number' name='phone_number' placeholder='6131230000' required)
                        div(class='form-row')
                            div(class='col')
                                label(for='street_number') Street Number
                                input(class='form-control' id='street_number' name='street_number' placeholder='1' required)
                            div(class='col-9')
                                label(for='street_name') Street Name
                                input(class='form-control' id='street_name' name='street_name' placeholder='Police Plaza Path' required)
                        div(class='form-row')
                            div(class='col-5')
                                label(for='city') City
                                input(class='form-control' id='city' name='city' placeholder='New York City' required)
                            div(class='col-4')
                                label(for='province') Province
                                select(class='form-control' id='province' name='province' required)
                                    option Alberta
                                    option British Columbia
                                    option Manitoba
                                    option New Brunswick
                                    option Newfoundland and Labrador
                                    option Nova Scotia
                                    option(selected='selected') Ontario
                                    option Prince Edward Island
                                    option Quebec
                                    option Saskatchewan
                            div(class='col-3')
                                label(for='postal_code') Postal Code
                                input(class='form-control' id='postal_code' name='postal_code' placeholder='K5A2G2' required)
                        div(class='modal-footer')
                            button(type='submit' class='btn btn-primary') Submit