div(class='container-fluid p-0')
    nav(class='navbar sticky-top navbar-expand-md navbar-dark bg-dark')
        a(class='navbar-brand' href='/')
            img(src='/images/logo.png' width='120' height='75' alt='Booklyn 99')
        button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span(class='navbar-toggler-icon')

        div(class='collapse navbar-collapse' id='navbarSupportedContent')
            ul(class='navbar-nav mr-auto')
                li(class='nav-item')
                    a(class='nav-link' href='/') Home
                li(class='nav-item')
                    a(class='nav-link' href='/books') Books
                li(class='nav-item')
                    a(class='nav-link' href='/search') Search
                li(class='nav-item')
                    a(class='nav-link' href='/account') Account
            button(type='button' class='btn btn-secondary btn-lg' data-toggle='modal' data-target='#login') Login

div(class='modal fade' id='login' tabindex='-1' role='dialog' aria-labelledby='loginTitle' aria-hidden='true')
    div(class='modal-dialog modal-dialog-centered' role='document')
        div(class='modal-content')
            div(class='modal-header')
                h5(class='modal-title' id='loginTitle') Login
                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;
            form(action='/login' method='post')
                div(class='modal-body')
                    div(class='form-group')
                        label(for='username') Username
                        input(class='form-control' id='username' name='username' placeholder='Username')
                    div(class='form-group')
                        label(for='password') Password
                        input(type='password' class='form-control' id='password' name='password' placeholder='********')
                div(class='modal-footer')
                    button(type='submit' class='btn btn-primary') Login
                    a(class='btn btn-secondary' href='/register') Register